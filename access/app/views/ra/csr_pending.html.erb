<div align="center">
  <div style="width: 700px">
    <h1><%= I18n.t "views.identification_pending_list" %></h1>
    <br />
    <table class="tablelist" id="tablelist" cellspacing="0" cellpadding="4px">
      <thead>
      <tr>
        <th><%= I18n.t "views.status" %></th>
        <th><%= I18n.t "views.label.person.email" %></th>
        <th><%= I18n.t "views.label.person.organization" %></th>
        <th><%= I18n.t "views.Request_date" %></th>
        <th><%= I18n.t "views.Person_information" %></th>
      </tr>
      </thead>
      <% @person = Person.all %>

      <% @csr.each do |f| %>
          <% id = f.requestor_id %>
          <% person = @person.find(id)%>

          <tr>
            <td style ="text-align: center;">
              <%= f.status %>
            </td>
            <td style ="text-align: center;">
              <%= person.email%>
            </td>
            <td style ="text-align: center;">
              <%= person.organization.name %>
            </td>
            <td style ="text-align: center;">
              <%= f.created_at %>
            </td>
            <td style ="text-align: center;">
              <%= person.first_name_latin + " " + person.last_name_latin+ " " + "(" + person.phone_number+")" %>
            </td>
          </tr>

      <% end %>
    </table>
    <br />
  </div>
</div>

